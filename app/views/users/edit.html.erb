<%= form_for @user do |f| %>

  Nombre:
  <%= f.text_field :name, placeholder: "Ingresa tu nombre" %><br><br>

   Correo:
  <%= f.text_field :email, placeholder: "Ingresa tu correo" %><br><br>

   Contraseña:
  <%= f.password_field :password, placeholder: "Ingresa nueva contraseña" %><br><br>

  <%= f.submit "Actualizar" %>
<% end %>